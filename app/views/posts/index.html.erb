<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Welcome to the Message Board</h1>
    <p>This is where we have awesome discussions about a variety of subjects. Feel free to look around, and please log in or sign up if you would like to post a new topic, or reply to an existing conversation.</p>
    <div class="text-center">
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success btn-lg" %>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  
<% end %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <% @post.each do |post| %>
        <div class="well">
          <h2><%= post.title %></h2>
            <%= link_to "View Post", post_path(post), class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>


