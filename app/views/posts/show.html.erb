<h2><%= @post.title %></h2>
<p>Posted by <%= @post_author %> on <%= @post.created_at.strftime("%A, %B %y, %Y at %r") %></p>
<hr>
<p><%= @post.body %></p>
<hr>

<h3>Comments</h3>
<%= render @post.comments %>

<h3>Reply</h3>
<%= render 'comments/form' %>
<br>

<% if user_signed_in? %>
  <% if @post.user_id == current_user.id %>
    <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-success" %>
    <%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Delete this post?" }, class: "btn btn-danger" %>
  <% end %>
<% end %>